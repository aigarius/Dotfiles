#
# bspwm hotkeys
#

# Quit bspwm.
super + alt + Escape
    bspc quit

# Restart WM.
super + Escape
    ~/Utils/restart_wm.sh

# Close window.
super + w
    bspc window -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

# Enable/disable gaps for desktop.
super + m
    bspc desktop --layout next monocle

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

# Go to prev window.
super + minus
    bspc desktop -f prev

# Go to next window.
super + equal
    bspc desktop -f next

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -50,up +50,down -50,left +50}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# Switch to last desktop.
super + grave
    bspc desktop -f last

# Switch to last window.
super + Tab
    bspc window -f next

# Focus on urgent monitor.
super + u
    bspc desktop -f next.urgent

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

super + Return
    xfce4-terminal

super + p
    dmenu-go

super + control + p
    passmenu

F3
    disable-sreen

F4
    brightness-dec-by-5

F5
    brightness-inc-by-5

F7
    lock.sh

F8
    playerctl previous

F9
    playerctl play-pause

F10
    playerctl next

F11
    volume-dec-by-5

F12
    volume-inc-by-5

XF86AudioMute
    volume-toggle

Print
    take-screenshot

super + Print
    take-screenshot-of-window

# Convenience shortcuts.

super + shift + m
    open-pavucontrol

super + shift + v
    open-vim

super + shift + e
    open-mousepad

super + shift + i
    open-firefox

# Shortcut for opening it with single hand.
super + shift + z
    open-firefox

super + shift + u
    open-chrome

super + shift + y
    open-chrome-incognito

super + shift + s
    open-spotify

super + shift + b
    open-transmission

super + shift + q
    open-ipython

super + shift + w
    open-ipython2

super + shift + g
    open-glances

super + shift + r
    open-ranger
# vim: iskeyword+=-
