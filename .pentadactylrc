" vim: set filetype=vim :

loadplugins '\.(js|penta)$'

set guioptions=s
set complete=location,search,suggestion,bookmark
set defsearch=duckduckgo
set hlfind

nmap u :back<CR>
nmap <C-r> :forward<CR>

nmap U :tab viewsource<CR>

nmap <S-j> gT
nmap <S-k> gt

nmap <C-l> :nohlfind<CR>

nmap <C-t> t

nmap d <pass>
nmap w <pass>

nmap <C-c> <pass>

imap <C-v> <pass>
imap -builtin <M-z> <pass>
imap -builtin <M-a> <pass>
imap -builtin <M-x> <pass>

cmap <C-v> <pass>

nmap <S-u> :tab viewsource<CR>

nmap s :stop<CR>

nmap yy y

:hi -a Hint font-family: Inconsolata-g !important;
:hi -a Hint font-size: 14px !important;
:hi -a Hint color: white !important;
:hi -a Hint background: black !important;
:hi -a StatusLine font-family: Inconsolata-g !important;
:hi -a StatusLine font-size: 12px !important;
:hi -a Comp font-family: Inconsolata-g !important;
:hi -a Comp font-size: 12px !important;

" Edit text in external editor.
imap -builtin <C-e> <C-i>

map -builtin <silent> b :toolbartoggle Bookmarks Toolbar<CR>

nmap <C-f> /

nmap <C-e> o

nmap <Space>d :tabopen devdocs.io<CR>
nmap <Space>t :tabopen translate.google.com<CR>
nmap <Space>m :tabopen maps.google.com<CR>

" Basics of Readline.
cmap <C-a> <Home>
cmap <C-e> <End>
cmap <A-b> <C-Left>
cmap <A-f> <C-Right>
