" vim: set filetype=vim :

loadplugins '\.(js|penta)$'

set guioptions=bns
set complete=location,search,suggestion,bookmark
set defsearch=google
set hintkeys=asdfghjkl
set hlfind

nmap u :back<CR>
nmap <C-r> :forward<CR>

nmap U :tab viewsource<CR>

nmap <S-j> gT
nmap <S-k> gt

nmap <C-l> :nohlfind<CR>

nmap d <pass>

nmap <C-c> <pass>
imap <C-v> <pass>
cmap <C-v> <pass>

nmap <S-u> :tab viewsource<CR>

imap -builtin <C-e> <C-i>

map -builtin <silent> b :toolbartoggle Bookmarks Toolbar<CR>

cmap <C-a> <Home>
cmap <C-e> <End>
cmap <A-b> <C-Left>
cmap <A-f> <C-Right>

hi HintElem background-color: none;
hi Hint -append font-size: 14px !important;
hi StatusLine font-size: 12px;
