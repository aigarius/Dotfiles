" vim: set filetype=vim :

loadplugins '\.(js|penta)$'

set guioptions=ns
set complete=location,search,suggestion,bookmark
set hlfind

nmap u :back<CR>
nmap <C-r> :forward<CR>

nmap U :tab viewsource<CR>

nmap <S-j> gT
nmap <S-k> gt

nmap <C-l> :nohlfind<CR>

nmap <C-r> R

nmap <C-t> t

nmap d <pass>
nmap w <pass>

nmap <C-c> <pass>

imap <C-v> <pass>
imap -builtin <M-z> <pass>
imap -builtin <M-a> <pass>
imap -builtin <M-x> <pass>

cmap <C-v> <pass>

nmap <S-u> :tab viewsource<CR>

nmap s :stop<CR>

nmap yy y

:hi -a Hint font-size: 14px !important;

" Edit text in external editor.
imap -builtin <C-e> <C-i>

map -builtin <silent> b :toolbartoggle Bookmarks Toolbar<CR>

nmap <C-f> /
