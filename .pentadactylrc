" vim: set filetype=vim :

loadplugins '\.(js|penta)$'

set guioptions=
set hlfind

set complete=lbh

nmap u :back<CR>
nmap <C-r> :forward<CR>

nmap <S-j> gT
nmap <S-k> gt

nmap <C-l> :nohlfind<CR>

nmap <C-r> R

nmap <C-t> t

nmap d <pass>
nmap w <pass>

nmap <C-c> <pass>

imap <C-v> <pass>
imap <C-z> <pass>

cmap <C-v> <pass>

nmap <S-u> :viewsource<CR>

nmap s :stop<CR>

:hi -a Hint font-size: 14px !important;
