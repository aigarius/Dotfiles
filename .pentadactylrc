" vim: set filetype=vim :

loadplugins '\.(js|penta)$'

set guioptions=bns
set complete=location,search,suggestion,bookmark
set defsearch=google
set hintkeys=asdfghjkl
set hlfind

nmap u :back<CR>
nmap <C-r> :forward<CR>

" View source.
nmap <S-u> gF<CR>

nmap <S-j> gT
nmap <S-k> gt

nmap <C-l> :nohlfind<CR>

nmap d <pass>

nmap <C-c> <pass>
imap <C-v> <pass>
cmap <C-v> <pass>

nmap <S-u> :tab viewsource<CR>

" <C-i> will open $EDITOR with contents of current input/textarea.
imap <C-q> <C-i>

map -builtin <silent> b :toolbartoggle Bookmarks Toolbar<CR>

cmap <C-a> <Home>
cmap <C-e> <End>
cmap <A-b> <C-Left>
cmap <A-f> <C-Right>

nmap <Space><Space> <C-^>

nmap s :stop<CR>

hi Hint -append font-size: 12px !important;
hi HintElem -append background: none !important;
hi StatusLine -append font-size: 12px !important;
